    "mark": {"type": "line", "orient": "vertical"},
    "encoding": {
      "x": {"field": "Score Type", "type": "ordinal"},
      "y": {"field": "rank", "type": "ordinal"},
      "color": {
        "field": "team", "type": "nominal",
        "scale": {
          "domain": ["France", "Ukraine", "Australia", "Sweden"],
