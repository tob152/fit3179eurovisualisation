{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Figure 2. Ranking of Countries"
      
    },
    "width": 700,
    "height": 450,
    "data": {
      "values": [
        {"team": "France", "Score Type": "Televoting", "point": 0, "diff": -1},
        {"team": "Ukraine", "Score Type": "Televoting", "point": 3, "diff": 1},
        {"team": "Australia", "Score Type": "Televoting", "point": 0, "diff": -1},
        {"team": "Sweden", "Score Type": "Televoting", "point": 3, "diff": 1},
        {"team": "France", "Score Type": "Jury", "point": 3, "diff": 0},
        {"team": "Ukraine", "Score Type": "Jury", "point": 6, "diff": 2},
